<%= form_for [@post, @post.comments.create], remote: true do |f| %>
  <div class="form-group">
    <h4>New Comment:</h4>
    <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter comment" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>